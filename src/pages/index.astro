---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

import projectsData from "../constants/projects.json";

const featuredProjects = ["RAG", "GAN"];

const projects = projectsData.projects.filter((project) =>
    featuredProjects.find((name) => project.title.includes(name))
);
---

<BaseLayout title="Home" description="Welcome to my creative portfolio.">
    <div class="container">
        <section class="hero">
            <h1>Hello, I'm Sujan Maharjan</h1>
            <p class="tagline">
                A Graduate Student at North Dakota State University passionate
                about AI - Machine Learning.
            </p>
            <a href="/projects/" class="cta-button">View My Work</a>
        </section>

        <section class="featured-work">
            <h2>Featured Projects</h2>
            <div class="project-grid">
                {
                    projects.length > 0 ? (
                        projects.map((project) => (
                            <ProjectCard
                                title={project.title}
                                description={project.description}
                                tags={project.tags}
                                imageUrl={project.imageUrl}
                                slug={project.slug}
                                github={project.github}
                            />
                        ))
                    ) : (
                        <p>
                            No projects to display at the moment. Check back
                            soon!
                        </p>
                    )
                }
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .hero {
        min-height: calc(60vh - var(--header-height)); /* Example height */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 3rem 0;
    }

    .hero h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: var(--text-headings);
    }

    .tagline {
        font-size: 1.5rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        background-color: var(--accent-primary);
        color: var(--bg-primary); /* Or a very light color like #fff */
        padding: 0.8rem 1.8rem;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition:
            background-color 0.2s ease,
            transform 0.2s ease;
    }

    .cta-button:hover {
        background-color: var(--accent-hover);
        transform: translateY(-2px);
    }

    .featured-work {
        padding: 3rem 0;
    }

    .featured-work h2 {
        margin-bottom: 2rem;
    }

    .project-grid {
        /* Basic styling for now */
        border: 1px dashed var(--border-color);
        padding: 2rem;
        color: var(--text-secondary);
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 768px) {
        .hero h1 {
            font-size: 4rem;
        }
        .tagline {
            font-size: 1.75rem;
        }

        .project-grid {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>
