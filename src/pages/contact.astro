---
// src/pages/contact.astro
import BaseLayout from "../layouts/BaseLayout.astro";

// You can reuse social links from Footer or define them here specifically
const contactSocials = [
    {
        href: "https://github.com/yourusername",
        label: "GitHub",
        iconClass: "fab fa-github",
    }, // Example with Font Awesome
    {
        href: "https://linkedin.com/in/yourusername",
        label: "LinkedIn",
        iconClass: "fab fa-linkedin",
    },
    {
        href: "https://twitter.com/yourusername",
        label: "Twitter / X",
        iconClass: "fab fa-twitter",
    }, // Or fab fa-x-twitter
    // { href: "mailto:youremail@example.com", label: "Email", iconClass: "fas fa-envelope" }
];

const emailAddress = "sujanmaharjan2010@gmail.com";
---

<BaseLayout
    title="Contact Me"
    description="Get in touch with me for collaborations, questions, or just to say hello."
>
    <div class="container page-container">
        <header class="page-header">
            <h1>Let's Connect</h1>
            <p class="subtitle">
                Have a project in mind, a question, or just want to say hi? I'd
                love to hear from you.
            </p>
        </header>

        <section class="contact-methods">
            <div class="contact-card email-card">
                <div class="icon-wrapper">
                    <!-- Simple SVG Envelope Icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                        ></path><polyline points="22,6 12,13 2,6"
                        ></polyline></svg
                    >
                </div>
                <h2>Email Me</h2>
                <p>The best way to reach me for inquiries or collaborations.</p>
                <a
                    href={`mailto:${emailAddress}`}
                    class="contact-link email-link"
                >
                    {emailAddress}
                </a>
            </div>

            <div class="contact-card social-card">
                <div class="icon-wrapper">
                    <!-- Simple SVG Users Icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"
                        ></path><circle cx="9" cy="7" r="4"></circle><path
                            d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path
                            d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg
                    >
                </div>
                <h2>Find Me Online</h2>
                <p>Connect with me on these platforms:</p>
                <ul class="social-links-contact">
                    {
                        contactSocials.map((social) => (
                            <li>
                                <a
                                    href={social.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    aria-label={`My ${social.label} profile`}
                                >
                                    <i
                                        class={social.iconClass}
                                        aria-hidden="true"
                                        style="padding-right: 4px;"
                                    />
                                    <span>{social.label}</span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="contact-form-placeholder">
            <h2>Or Send a Direct Message</h2>
            <p>
                <em
                    >(Contact form functionality coming soon! For now, please
                    use email.)</em
                >
            </p>
            <div class="form-mockup">
                <label for="name-mock">Name</label>
                <input
                    type="text"
                    id="name-mock"
                    placeholder="Your Name"
                    disabled
                />
                <label for="email-mock">Email</label>
                <input
                    type="email"
                    id="email-mock"
                    placeholder="Your Email"
                    disabled
                />
                <label for="message-mock">Message</label>
                <textarea
                    id="message-mock"
                    rows="4"
                    placeholder="Your message..."
                    disabled></textarea>
                <button type="button" class="cta-button" disabled
                    >Send (Disabled)</button
                >
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .page-container {
        padding-top: 2rem;
        padding-bottom: 3rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2.8rem;
    }

    .page-header .subtitle {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0.5rem auto 0;
    }

    .contact-methods {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    @media (min-width: 768px) {
        .contact-methods {
            grid-template-columns: 1fr 1fr;
        }
    }

    .contact-card {
        background-color: var(--bg-secondary);
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    .contact-card .icon-wrapper {
        background-color: var(--accent-primary);
        color: var(--bg-primary);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }
    .contact-card .icon-wrapper svg {
        stroke-width: 1.5; /* Thinner stroke for icon */
    }

    .contact-card h2 {
        font-size: 1.75rem;
        color: var(--text-headings);
        margin-bottom: 0.5rem;
    }

    .contact-card p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .contact-link {
        font-size: 1.1rem;
        color: var(--accent-primary);
        font-weight: 500;
        word-break: break-all;
    }
    .contact-link:hover {
        color: var(--accent-hover);
    }

    .social-links-contact {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
        justify-content: center;
    }

    .social-links-contact li a {
        color: var(--accent-primary);
        font-size: 1.1rem;
        font-weight: 500;
    }
    .social-links-contact li a:hover {
        color: var(--accent-hover);
    }

    .contact-form-placeholder {
        background-color: var(--bg-secondary);
        padding: 2rem;
        border-radius: 8px;
        margin-top: 2rem;
        text-align: center;
    }

    .contact-form-placeholder h2 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }
    .contact-form-placeholder p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .form-mockup {
        max-width: 500px;
        margin: 0 auto;
        text-align: left;
    }
    .form-mockup label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-primary);
    }
    .form-mockup input[type="text"],
    .form-mockup input[type="email"],
    .form-mockup textarea {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 4px;
        border: 1px solid var(--border-color);
        background-color: var(--bg-tertiary);
        color: var(--text-primary);
        font-size: 1rem;
        opacity: 0.6;
    }
    .form-mockup textarea {
        min-height: 100px;
        resize: vertical;
    }
    .form-mockup button {
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* Using .cta-button from global/index or define as needed */
    .cta-button {
        display: inline-block;
        background-color: var(--accent-primary);
        color: var(--bg-primary);
        padding: 0.8rem 1.8rem;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition:
            background-color 0.2s ease,
            transform 0.2s ease;
        border: none;
    }
    .cta-button:hover:not(:disabled) {
        background-color: var(--accent-hover);
        transform: translateY(-2px);
        text-decoration: none;
    }
</style>
