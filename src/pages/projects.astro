---
// src/pages/projects/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
// In the future, you'd import a ProjectCard component
// import ProjectCard from '../../components/ProjectCard.astro';

// Placeholder project data - you'll likely fetch this or define it more robustly
const projects = [
    {
        slug: "project-alpha",
        title: "Project Alpha",
        description: "A cutting-edge web application for task management.",
        tags: ["React", "Node.js", "MongoDB"],
        imageUrl: "/assets/project-images/placeholder-project.svg",
    },
    {
        slug: "project-beta",
        title: "Project Beta",
        description: "An e-commerce platform with a focus on user experience.",
        tags: ["Astro", "TailwindCSS", "Stripe"],
        imageUrl: "/assets/project-images/placeholder-project.svg",
    },
    {
        slug: "project-gamma",
        title: "Project Gamma",
        description:
            "A personal blog and portfolio site built with modern tech.",
        tags: ["Next.js", "MDX", "Vercel"],
        imageUrl: "/assets/project-images/placeholder-project.svg",
    },
    // Add more projects
];
---

<BaseLayout
    title="My Projects"
    description="Explore a selection of my recent work and case studies."
>
    <div class="container page-container">
        <header class="page-header">
            <h1>My Work & Portfolio</h1>
            <p class="subtitle">
                A collection of projects where I've turned ideas into reality.
            </p>
        </header>

        <section class="projects-grid">
            {
                projects.length > 0 ? (
                    projects.map((project) => (
                        <article class="project-card-placeholder">
                            {/* <ProjectCard project={project} />  -- This is what you'd use with a real component */}
                            <img
                                src={
                                    project.imageUrl ||
                                    "/assets/images/placeholder-project-dark.svg"
                                }
                                alt={`Preview of ${project.title}`}
                                class="project-image-placeholder"
                            />
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                            <div class="project-tags-placeholder">
                                {project.tags.map((tag) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                            <a
                                href={`/projects/${project.slug}/`}
                                class="project-link-placeholder"
                            >
                                View Details â†’
                            </a>
                        </article>
                    ))
                ) : (
                    <p>
                        No projects to display at the moment. Check back soon!
                    </p>
                )
            }
        </section>
    </div>
</BaseLayout>

<style>
    .page-container {
        padding-top: 2rem;
        padding-bottom: 3rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2.8rem;
    }

    .page-header .subtitle {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0.5rem auto 0;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    /* Styles for the placeholder card. Replace with ProjectCard styles later. */
    .project-card-placeholder {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.2s ease-in-out,
            box-shadow 0.2s ease-in-out;
    }

    .project-card-placeholder:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px var(--shadow-color);
    }

    .project-image-placeholder {
        width: 100%;
        height: 180px; /* Fixed height for consistency */
        object-fit: cover;
        border-radius: 4px;
        margin-bottom: 1rem;
        background-color: var(--bg-tertiary); /* Placeholder background */
        border: 1px solid var(--border-color);
    }

    .project-card-placeholder h3 {
        font-size: 1.5rem;
        color: var(--text-headings);
        margin-bottom: 0.5rem;
    }

    .project-card-placeholder p {
        font-size: 0.95rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        flex-grow: 1; /* Pushes tags and link to bottom */
    }

    .project-tags-placeholder {
        margin-bottom: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .project-tags-placeholder .tag {
        background-color: var(--bg-tertiary);
        color: var(--accent-primary);
        font-size: 0.8rem;
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        border: 1px solid var(--accent-secondary);
    }

    .project-link-placeholder {
        color: var(--accent-primary);
        font-weight: 500;
        text-decoration: none;
        align-self: flex-start; /* Align to the left */
    }

    .project-link-placeholder:hover {
        text-decoration: underline;
        color: var(--accent-hover);
    }
</style>
