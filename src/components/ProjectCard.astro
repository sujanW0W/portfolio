---
export interface ProjectCardProps {
    title: string;
    description: string;
    imageUrl: string;
    tags: Array<string>;
    slug: string;
    github: string;
}

const project = Astro.props as ProjectCardProps;
---

<article class="project-card-placeholder">
    <img
        src={project.imageUrl || "/assets/images/placeholder-project-dark.svg"}
        alt={`Preview of ${project.title}`}
        class="project-image-placeholder"
    />
    <h3>{project.title}</h3>
    <p>{project.description}</p>
    <div class="project-tags-placeholder">
        {project.tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
    {
        /* <a
                href={`/projects/${project.slug}/`}
                class="project-link-placeholder"
            >
                View Details â†’
            </a> 
        */
    }
    <div style="color: #FFF">
        <span>GitHub URL: </span>
        <a href={`${project.github}`} target="_blank">
            <i class={`fa-brands fa-github fa-lg`}></i>
        </a>
    </div>
</article>

<style>
    .project-card-placeholder {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.2s ease-in-out,
            box-shadow 0.2s ease-in-out;
    }

    .project-card-placeholder:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px var(--shadow-color);
    }

    .project-image-placeholder {
        width: 100%;
        height: 180px; /* Fixed height for consistency */
        object-fit: contain;
        border-radius: 4px;
        margin-bottom: 1rem;
        background-color: var(--bg-tertiary); /* Placeholder background */
        border: 1px solid var(--border-color);
    }

    .project-card-placeholder h3 {
        font-size: 1.5rem;
        color: var(--text-headings);
        margin-bottom: 0.5rem;
    }

    .project-card-placeholder p {
        font-size: 0.95rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        flex-grow: 1; /* Pushes tags and link to bottom */
    }

    .project-tags-placeholder {
        margin-bottom: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .project-tags-placeholder .tag {
        background-color: var(--bg-tertiary);
        color: var(--accent-primary);
        font-size: 0.8rem;
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        border: 1px solid var(--accent-secondary);
    }

    .project-link-placeholder {
        color: var(--accent-primary);
        font-weight: 500;
        text-decoration: none;
        align-self: flex-start; /* Align to the left */
    }

    .project-link-placeholder:hover {
        text-decoration: underline;
        color: var(--accent-hover);
    }
</style>
